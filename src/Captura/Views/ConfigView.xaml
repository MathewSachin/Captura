<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:local="clr-namespace:Captura"
      DataContext="{StaticResource MainViewModel}">
    <Grid>
        <ScrollViewer>
            <StackPanel Margin="3"
                        IsEnabled="{Binding RecorderState, Converter={StaticResource NotRecordingConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label Content="{local:Loc StartDelay}"
                           Margin="0,2,5,2"/>

                    <xctk:IntegerUpDown Value="{Binding StartDelay, Mode=TwoWay}"
                                        Grid.Column="1"
                                        Margin="0,2"/>

                    <Label Content="{local:Loc CaptureDuration}"
                           Margin="0,2,5,2"
                           Grid.Row="1"/>
                    <xctk:IntegerUpDown Value="{Binding Duration, Mode=TwoWay}"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0,2"/>
                </Grid>

                <CheckBox Content="{local:Loc MinCapture}"
                          IsChecked="{local:Setting MinimizeOnStart}"
                          Margin="0,2"/>

                <CheckBox Content="{local:Loc MinTray}"
                          IsChecked="{local:Setting MinimizeToTray}"
                          Margin="0,2"/>

                <CheckBox Content="{local:Loc ShowSysNotify}"
                          IsChecked="{local:Setting TrayNotify}"
                          Margin="0,2"/>

                <CheckBox Content="{local:Loc CopyOutPathClipboard}"
                          IsChecked="{local:Setting CopyOutPathToClipboard}"
                          Margin="0,2"/>
                
                <CheckBox Content="{local:Loc AlwaysOnTop}"
                          IsChecked="{local:Setting MainWindowTopmost}"
                          Margin="0,2"/>
                
                <CheckBox Content="{local:Loc HideOnFullScreenShot}"
                          IsChecked="{local:Setting HideOnFullScreenShot}"
                          Margin="0,2"/>

                <TextBlock Margin="0,7,0,3"
                           Text="{local:Loc Gif}"
                           FontWeight="Bold"/>

                <CheckBox Margin="0,2"
                          Content="{local:Loc VarFrameRate}"
                          IsChecked="{local:Setting GifVariable}"/>

                <DockPanel Margin="0,2">
                    <CheckBox Content="{local:Loc Repeat}"
                              Margin="0,0,5,0"
                              DockPanel.Dock="Left"
                              IsChecked="{local:Setting GifRepeat}"/>

                    <xctk:IntegerUpDown IsEnabled="{local:Setting GifRepeat}"
                                        Value="{local:Setting GifRepeatCount}"/>
                </DockPanel>

                <TextBlock Margin="0,7,0,3"
                           Text="{local:Loc ScreenShotTransforms}"
                           FontWeight="Bold"/>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox Content="{local:Loc Resize}"
                              IsChecked="{local:Setting DoResize}"
                              Margin="0,0,5,0"/>

                    <xctk:IntegerUpDown Value="{local:Setting ResizeWidth}"
                                        Grid.Column="1"
                                        IsEnabled="{local:Setting DoResize}"/>

                    <Label Content="x"
                           Grid.Column="2"
                           Margin="5,0"/>

                    <xctk:IntegerUpDown Value="{local:Setting ResizeHeight}"
                                        Grid.Column="3"
                                        IsEnabled="{local:Setting DoResize}"/>
                </Grid>

                <StackPanel Margin="0,5"
                            Orientation="Horizontal">
                    <CheckBox Content="{local:Loc FlipX}"
                              IsChecked="{local:Setting FlipHorizontal}"
                              Margin="0,0,10,0"/>

                    <CheckBox Grid.Column="1"
                              Content="{local:Loc FlipY}"
                              IsChecked="{local:Setting FlipVertical}"/>
                </StackPanel>

                <DockPanel Margin="0,5">
                    <Label Content="{local:Loc Rotate}"
                           ContentStringFormat="{}{0}: "
                           VerticalContentAlignment="Center"/>
                    <ComboBox Margin="5,0,0,0"
                              ItemsSource="{Binding Rotations}"
                              SelectedValuePath="Key"
                              DisplayMemberPath="Value"
                              SelectedValue="{local:Setting RotateBy}"/>
                </DockPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
