<UserControl x:Class="Captura.Recent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer>
            <DockPanel>
                <Button DockPanel.Dock="Top" Foreground="{StaticResource Accent}" Content="Open Output Folder" Click="OpenOutputFolder"/>
                <ListView Margin="0,10,0,0" DisplayMemberPath="Content" ItemsSource="{Binding RecentList, Mode=TwoWay}"/>
            </DockPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
