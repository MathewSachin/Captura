<Window x:Class="Captura.RegionSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegionSelector"
        Height="300"
        Background="Transparent"
        Width="300"
        WindowStyle="None"
        AllowsTransparency="True" 
        Topmost="True"
        BorderBrush="#27000000"
        BorderThickness="3"
        ResizeMode="CanResize"  
        Icon="/Captura;component/Captura.ico">
    <WindowChrome.WindowChrome>
        <WindowChrome CornerRadius="0"
                      ResizeBorderThickness="3"
                      GlassFrameThickness="1"
                      UseAeroCaptionButtons="False"
                      NonClientFrameEdges="None"/>
    </WindowChrome.WindowChrome>
    <StackPanel>
        <Label Cursor="SizeAll"
               Height="20"
               Background="#01FFFFFF"
               MouseDoubleClick="HeaderMouseDoubleClick"
               PreviewMouseLeftButtonDown="HeaderPreviewMouseLeftButtonDown"/>
    </StackPanel>
</Window>
